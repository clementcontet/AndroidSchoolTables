<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".DigitsActivity">

    <CheckBox
        android:id="@+id/digit_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"


        app:layout_constraintBottom_toTopOf="@id/digit_6"
        app:layout_constraintEnd_toStartOf="@id/digit_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <CheckBox
        android:id="@+id/digit_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="2"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/digit_7"
        app:layout_constraintTop_toTopOf="@+id/digit_1" />

    <CheckBox
        android:id="@+id/digit_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/digit_8"
        app:layout_constraintTop_toTopOf="@+id/digit_1" />

    <CheckBox
        android:id="@+id/digit_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="4"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/digit_5"
        app:layout_constraintStart_toEndOf="@id/digit_3"
        app:layout_constraintTop_toTopOf="@+id/digit_1" />

    <CheckBox
        android:id="@+id/digit_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/digit_10"
        app:layout_constraintTop_toTopOf="@+id/digit_1" />

    <CheckBox
        android:id="@+id/digit_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="6"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/addition"
        app:layout_constraintEnd_toStartOf="@id/digit_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/digit_1"
        tools:checked="true" />

    <CheckBox
        android:id="@+id/digit_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="7"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/digit_8"
        app:layout_constraintStart_toEndOf="@id/digit_6"
        app:layout_constraintTop_toTopOf="@+id/digit_6" />

    <CheckBox
        android:id="@+id/digit_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="8"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/digit_9"
        app:layout_constraintStart_toEndOf="@id/digit_7"
        app:layout_constraintTop_toTopOf="@+id/digit_6" />

    <CheckBox
        android:id="@+id/digit_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/digit_10"
        app:layout_constraintStart_toEndOf="@id/digit_8"
        app:layout_constraintTop_toTopOf="@+id/digit_6" />

    <CheckBox
        android:id="@+id/digit_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="10"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/digit_9"
        app:layout_constraintTop_toTopOf="@+id/digit_6" />

    <Button
        android:id="@+id/addition"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:fontFamily="casual"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/multiplication"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:text="x"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>